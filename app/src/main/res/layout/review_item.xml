<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_review_content"
        android:adjustViewBounds="true"
        android:textSize="@dimen/review_text_size"
        android:textColor="@color/filmText"
        android:paddingTop="@dimen/trailer_padding"
        android:paddingStart="@dimen/review_padding"
        android:paddingEnd="@dimen/review_padding"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_review_author"
        android:adjustViewBounds="true"
        android:textSize="@dimen/review_text_size"
        android:paddingBottom="@dimen/trailer_padding"
        android:textColor="@color/filmText"
        android:paddingStart="@dimen/review_padding"
        android:paddingEnd="@dimen/review_padding"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/tv_review_bottom_divider"
        android:background="@color/filmText"/>
</LinearLayout>
